# https://github.com/agkozak/agkozak-zsh-theme

ZPML_PROMPT=(
  if is_exit_0 then
  else
    bold fg_red exit_status unfg unbold space
  fi

  bold fg_blue pwd unfg unbold

	if is_git then
		space fg_243 literal '(' git_branch git_status literal '%)' unfg
	fi

  newline

  if is_superuser then
    literal '#'
  else
    literal '$'
  fi
  space
)

ZPML_RPROMPT=()

