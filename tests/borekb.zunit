#!/usr/bin/env zunit

AGKOZAK_ZPML_RPROMPT=()

@test 'Testing borekb theme in color and monochrome' {
	load ../agkozak-zsh-theme.plugin.zsh

	zpml load borekb

	[[ "$(zpml compile ZPML_PROMPT color)" == $'%(?..%B%F{red}(%?%)%f%b )%B%F{blue}%2v%f%b%(3V. %F{243}(%3v%(4V. %4v.)%)%f.)\n%(!.#.$) ' ]]

	assert $state equals 0

	assert $RPROMPT same_as ''

	zpml load borekb

	[[ "$(zpml compile ZPML_PROMPT mono)" == $'%(?..%B(%?%)%b )%B%2v%b%(3V. (%3v%(4V. %4v.)%).)\n%(!.#.$) ' ]]

	assert $state equals 0

	assert $RPROMPT same_as ''
}

